<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="com.gesila.test.guard.navigator.ui.views.GesilaTestGuardCommonNavigator"
            icon="icons/testguardexplorer.png"
            id="com.gesila.test.guard.navigator.ui.views.GesilaTestGuardCommonNavigator"
            name="Gesila TestGuard Explorer"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewer
            viewerId="com.gesila.test.guard.navigator.ui.views.GesilaTestGuardCommonNavigator">
         <popupMenu
               id="com.gesila.test.guard.navigator.ui.views.GesilaTestGuardCommonNavigator#PopupMenu">
            <insertionPoint
                  name="group.new"
                  separator="true">
            </insertionPoint>
            <insertionPoint
                  name="group.edit">
            </insertionPoint>
         </popupMenu>
      </viewer>
      <viewerActionBinding
            viewerId="com.gesila.test.guard.navigator.ui.views.GesilaTestGuardCommonNavigator">
         <includes>
            <contentExtension
                  pattern="com.gesila.test.guard.navigator.ui.views.providers.GesilaTestGuardCommonActionProvider">
            </contentExtension>
            <actionExtension
                  pattern="com.gesila.test.guard.navigator.ui.views.providers.GesilaTestGuardOpenActionProvider">
            </actionExtension>
         </includes>
      </viewerActionBinding>
      <viewerContentBinding
            viewerId="com.gesila.test.guard.navigator.ui.views.GesilaTestGuardCommonNavigator">
         <includes>
            <contentExtension
                  pattern="com.gesila.test.guard.navigator.ui.navigatorContent">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            contentProvider="com.gesila.test.guard.navigator.ui.views.providers.GesilaTestGuardTreeContentProvider"
            icon="icons/testguard.png"
            id="com.gesila.test.guard.navigator.ui.navigatorContent"
            labelProvider="com.gesila.test.guard.navigator.ui.views.providers.GesilaTestGuardTreeLabelProvider"
            name="TestGuard Navigator Content"
            priority="higher">
         <triggerPoints>
            <instanceof
                  value="org.eclipse.core.resources.IWorkspaceRoot">
            </instanceof>
         </triggerPoints>
         <possibleChildren>
            <instanceof
                  value="org.eclipse.core.resources.IResource">
            </instanceof>
         </possibleChildren>
         <actionProvider
               class="com.gesila.test.guard.navigator.ui.views.providers.GesilaTestGuardCommonActionProvider"
               id="com.gesila.test.guard.navigator.ui.views.providers.GesilaTestGuardCommonActionProvider">
            <enablement>
               <or>
                  <adapt
                        type="java.util.Collection">
                     <count
                           value="0">
                     </count>
                  </adapt>
                  <instanceof
                        value="com.gesila.test.guard.project.models.IGesilaTestGuardProject">
                  </instanceof>
               </or>
            </enablement>
         </actionProvider>
         <override
               policy="InvokeAlwaysRegardlessOfSuppressedExt"
               suppressedExtensionId="org.eclipse.ui.navigator.resourceContent">
         </override>
         <commonWizard
               type="new"
               wizardId="com.gesila.test.guard.navigator.ui.wizards.GesilaTestGuardNewProjectWizard">
            <enablement></enablement>
         </commonWizard>
         <actionProvider
               class="com.gesila.test.guard.navigator.ui.views.providers.GesilaTestGuardOpenActionProvider"
               id="com.gesila.test.guard.navigator.ui.views.providers.GesilaTestGuardOpenActionProvider">
            <enablement>
               <instanceof
                     value="com.gesila.test.guard.project.models.impl.GesilaTestGuard">
               </instanceof>
            </enablement>
         </actionProvider>
      </navigatorContent>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            class="com.gesila.test.guard.navigator.ui.wizards.GesilaTestGuardNewProjectWizard"
            icon="icons/project.png"
            id="com.gesila.test.guard.navigator.ui.wizards.GesilaTestGuardNewProjectWizard"
            name="TestGuard Project"
            project="true">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:test.guard.new.menu?after=additions">
         <command
               commandId="com.gesila.test.guard.navigator.ui.views.handlers.GesilaTestGuardNewGroupHandler"
               icon="icons/test_guard_group.gif"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
         <command
               commandId="com.gesila.test.guard.navigator.ui.views.handlers.GesilaTestGuardNewRequestHandler"
               icon="icons/testguard.gif"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="com.gesila.test.guard.navigator.ui.views.handlers.GesilaTestGuardNewGroupHandler"
            name="TestGuard Group">
      </command>
      <command
            id="com.gesila.test.guard.navigator.ui.views.handlers.GesilaTestGuardNewRequestHandler"
            name="TestGuard Request">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.gesila.test.guard.navigator.ui.views.handlers.GesilaTestGuardNewGroupHandler"
            commandId="com.gesila.test.guard.navigator.ui.views.handlers.GesilaTestGuardNewGroupHandler">
         <enabledWhen>
            <and>
               <not>
                  <adapt
                        type="java.util.Collection">
                     <count
                           value="0">
                     </count>
                  </adapt>
               </not>
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="true">
                     <instanceof
                           value="com.gesila.test.guard.project.models.IGesilaTestGuardProject">
                     </instanceof>
                  </iterate>
               </with>
            </and>
         </enabledWhen>
      </handler>
      <handler
            class="com.gesila.test.guard.navigator.ui.views.handlers.GesilaTestGuardNewRequestHandler"
            commandId="com.gesila.test.guard.navigator.ui.views.handlers.GesilaTestGuardNewRequestHandler">
         <enabledWhen>
            <and>
               <not>
                  <adapt
                        type="java.util.Collection">
                     <count
                           value="0">
                     </count>
                  </adapt>
               </not>
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="true">
                     <instanceof
                           value="com.gesila.test.guard.project.models.IGesilaTestGuardProject">
                     </instanceof>
                  </iterate>
               </with>
            </and>
         </enabledWhen>
      </handler>
   </extension>

</plugin>
